@{
    ViewData["Title"] = "Register Page";
}

<section class="vh-90">
    <div class="container wrapper_register">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 form-register">
                            <form class="mx-1 mx-md-4 needs-validation" novalidate>
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                                    <i class="fas fa-cubes me-3" style="color: #7ba178;"></i>
                                    Register
                                </p>    
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw" style="margin-top: 30px;"></i>
                                    <div class="flex-fill mb-0">
                                        <label for="validationTooltip01" class="form-label">Username</label>
                                        <input type="text" class="form-control" id="validationTooltip01" required>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw" style="margin-top: 30px;"></i>
                                    <div class="flex-fill mb-0">
                                        <label for="validationTooltip02" class="form-label">Email</label>
                                        <input type="text" class="form-control" id="validationTooltip02" required>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-phone fa-lg me-3 fa-fw" style="margin-top: 30px;"></i>
                                    <div class="flex-fill mb-0">
                                        <label for="validationTooltip03" class="form-label">Phone
                                            number</label>
                                        <input type="text" class="form-control" id="validationTooltip03" required>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-lock fa-lg me-3 fa-fw" style="margin-top: 30px;"></i>
                                    <div class="flex-fill mb-0">
                                        <label for="validationTooltip04" class="form-label">Password</label>
                                        <input type="text" class="form-control" id="validationTooltip04" required>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-key fa-lg me-3 fa-fw" style="margin-top: 30px;"></i>
                                    <div class="flex-fill mb-0">
                                        <label for="validationTooltip05" class="form-label">Repeat your
                                            password</label>
                                        <input type="text" class="form-control" id="validationTooltip05" required>
                                    </div>
                                </div>

                                <div class="form-check d-flex justify-content-center mb-5" style="margin-left: 14px;">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="invalidCheck"
                                        required>
                                    <label class="form-check-label" for="invalidCheck">
                                        I agree all statements in Terms of service
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-dark btn-lg" style="text-transform: none;">
                                        Register
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2 
                            d-none d-lg-block" style="margin-top: auto; margin-bottom: auto;">
                            <img src="~/images/banner/back-ground-signup.png" class="img-fluid" asp-append-version="true">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
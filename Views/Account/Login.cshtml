@model Menswear_App.Models.User;

@{
    ViewData["Title"] = "Login Page";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <section class="vh-90">
        <div class="container wrapper_login">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                            alt="login form" class="img-fluid" style="margin-top: 8rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center form-login">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form class="">
                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <i class="fas fa-cubes fa-2x me-3" style="color: #7ba178;"></i>
                                    <span class="h1 fw-bold mb-0">Log in</span>
                                </div>

                                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into
                                    your account</h5>

                                @Html.AntiForgeryToken()
                                <div class="mb-4">
                                    @Html.LabelFor(m => m.UserEmail, new {@class = "form-label", @for = "validationTooltip01"})
                                    @Html.TextBoxFor(m => m.UserEmail, "", new {@class = "form-control", @placeholder =
                                "Email", @type = "text", @id = "validationTooltip01"})
                                    @* <label for="validationTooltip01" class="form-label">Username</label>
                                        <input type="text" class="form-control" id="validationTooltip01" required>
                                        <div class="invalid-tooltip">
                                        Please fill in your username.
                                        </div> *@
                                </div>

                                @* @Html.AntiForgeryToken() *@
                                <div class="mb-4">
                                    @Html.LabelFor(m => m.UserPassword, new {@class = "form-label", @for = "validationTooltip02"})
                                    @Html.PasswordFor(m => m.UserPassword, new {@class = "form-control", @placeholder =
                                "Password", @type = "password", @id = "validationTooltip02"})
                                    @* <label for="validationTooltip02" class="form-label">Password</label>
                                        <input type="text" class="form-control " id="validationTooltip02" required>
                                        <div class="invalid-tooltip">
                                        Please fill in your password.
                                        </div> *@
                                </div>

                                <div class="form-check mb-0">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                    <label class="form-check-label" for="form2Example3">
                                        Remember me
                                    </label>
                                </div>

                                <div class="pt-2 mb-3">
                                    <button class="btn btn-dark btn-lg btn-block button-login" name="submit" type="submit">Login</button>
                                </div>

                                <a class="small text-muted text-reset" href="#!">Forgot password?</a>
                                <p class="mb-5 pb-lg-2 " style="color: #393f81;">Don't have an account?
                                    <a class="text-reset" asp-action="Register" asp-controller="Account" style="color: #393f81;">Register here</a>
                                </p>
                                <a href="#!" class="small text-muted text-reset">Terms of use.</a>
                                <a href="#!" class="small text-muted text-reset">Privacy policy</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
;